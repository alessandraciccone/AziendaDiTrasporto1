<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    
    <persistence-unit name="azienda_di_trasporto" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Classi entitÃ  -->
        <class>entities.Veicolo</class>
        <class>entities.Tessera</class>
        <class>entities.Abbonamento</class>
        <class>entities.Utente</class>
        <class>entities.TitoloDiViaggio</class>
        <class>entities.Biglietto</class>
        <class>entities.PuntoEmissione</class>
        <class>entities.Distributore</class>
        <class>entities.Rivenditore</class>
        <class>entities.Tratta</class>
        <class>entities.AssegnazioneTratta</class>
        <class>entities.Manutenzione</class>

        <properties>
            <!-- Configurazione Database -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/azienda_di_trasporto"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            
            <!-- Configurazione Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
